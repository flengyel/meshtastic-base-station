#:kivy 2.0.0

<MessagesView>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark background
        Rectangle:
            pos: self.pos
            size: self.size

<NodesView>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<DeviceTelemetryView>:
    orientation: 'vertical'
    Label:
        text: 'Device Telemetry'
        size_hint_y: None
        height: '40dp'
        bold: True

<NetworkTelemetryView>:
    orientation: 'vertical'
    Label:
        text: 'Network Telemetry'
        size_hint_y: None
        height: '40dp'
        bold: True

<EnvironmentTelemetryView>:
    orientation: 'vertical'
    Label:
        text: 'Environment Telemetry'
        size_hint_y: None
        height: '40dp'
        bold: True